@model UserClientMembers.Models.ProfileModel

<div id="userAboutInformationPartial">
    <div class="aboutLeftColumn">
    <div class="aboutPictureWrapper">
        <div class="aboutPicture" style = "display:table-cell; text-align:center; vertical-align:middle; width:200px; height:200px; cursor:pointer">
            @if (Model.projects.ElementAt(0).coverPictureThumbnail!= null)
            {
                <img src="@Model.projects.ElementAt(0).coverPictureThumbnail" alt="click to add a picture please..." />
            }
            else
            {
                <img src="../../Content/Images/chip_you2.png" alt="" width="200px" height="200px" />
            }

            <span class="editProjectPictureLabel">CHANGE</span>
        </div>

        <div class = "informationPictureUpload" id="projectPictureUpload_@(Model.projects.ElementAt(0).id)">
            <form action="/Project/UpdateProjectPicture" method="post" enctype="multipart/form-data"
            target="iframe-post-form">
            <input id="projectId" name="projectId" type="hidden" value="@Model.projects.ElementAt(0).id" />
            <input type="file" class="projectPictureUploadInput" name="projectPictureUploadInput" style="" onchange="javascript:postFile('projectPicture');" />
            </form>
        </div>

        <div id="title" class="title inLineEdit editable">@if (Model.title != null)
            {
                @Html.Raw(Model.title);
        }
            else
            {@Html.Raw("Title goes here")}</div>
        <div id="name" class="name">@Model.firstName @Model.lastName</div>
        <div id="email" class="email inLineEdit editable">@Model.email</div>

        
        
    </div>

    

    <div class="aboutLinks">

        <img class="aboutLink" style="cursor:pointer;position:absolute;margin-top:5px;margin-left:5px;" src="http://cdn1.iconfinder.com/data/icons/web2/Icons/FaceBook_32x32.png" width="32" height="32" alt="" />
        <img class="aboutLink" style="cursor:pointer;position:absolute;margin-top:4px;margin-left:45px;" src="http://cdn1.iconfinder.com/data/icons/metallic/128%20PNG/twitter_02.png" width="30" height="30" alt="" />
        <img class="aboutLink" style="cursor:pointer;position:absolute;margin-top:2px;margin-left:80px;" src="http://cdn1.iconfinder.com/data/icons/umar/Linked%20In.png" width="35" height="35" alt="" />
        
        <img class="comingSoonOverlay" src="../../Content/Images/comingSoon120x40Overlay.png" />
    </div>
    </div>
    


    <div class="aboutMeWrapper">
        <sh4><div class="aboutMe userAboutInformation">@*@Model.description*@
    <br />
        <p id="description" class="inLineEditUserDescription editable">@if (Model.description != null)
            {@Html.Raw(Model.description);}
            else
            {@Html.Raw("This is where you can welcome others to your profile page. Feel free to show off here and let everyone know why you're a qualified individual.<br /><br />You can also throw in some information about your hobbies and interests. Be sure to keep it brief, though! I heard there are some really funny viral Youtube videos right now that are going to distract your audience if you drag on too long...")}</p>
    </div></sh4>
    </div>
    <div class="helpElementContainer">
        <div id="helpElementAboutProject" class="helpElement tipHelpElementAboutProject active">
                <p2><br /></p2>
        </div>

        @Html.Partial("_HelpTipsPopup", new UserClientMembers.Models.HelpTips { HelpTipsText = "This is where you can give others a quick summary about yourself." })
    </div>


       
</div>
